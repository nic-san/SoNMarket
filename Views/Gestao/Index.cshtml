<canvas class="line-chart"></canvas>
<script src="https://cdn.jsdelivr.net/npm/chart.js@3.2.1/dist/chart.min.js"></script>
<script>
    var enderecoRelatorioDeVendas = "https://localhost:5000/Gestao/RelatorioDeVendas";
    var labels = [];//data das vendas
    var data = [];//dados
    $.post(enderecoRelatorioDeVendas, function (dados, status){
        console.log(dados);
        for (var i = 0; i < dados.length; i++) {
            labels.push(dados[i].data);
            data.push(dados[i].total);
        }

        var canvas = document.getElementsByClassName("line-chart");
        //chart js
        var grafico = new Chart(canvas, {
            type: "line",
            data: {
                labels: labels,
                datasets: [{
                    label: "Total de vendas em R$",
                    data: data,
                    borderWidth: 12,
                    borderColor: "#113300",
                    backgroundColor:"transparent"
                }]
            }
        });

    });
</script>